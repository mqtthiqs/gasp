# -*- Makefile -*-

%+.gasp: %+.tm %.gasp ${TARGET}
	@echo COMMIT $<
	@cp  $*.gasp $@
	@./${TARGET} commit $< --repo $@ || (rm $@; false)

%.gasp : %.elf ${TARGET}
	@echo INIT $<
	@./${TARGET} init $< --repo $@
	@./${TARGET} check --repo $@ || (rm $@; false)

check: $(patsubst %.elf, %.gasp, $(wildcard tests/*.elf)) \
       $(patsubst %.tm, %.gasp, $(wildcard tests/*.tm))
